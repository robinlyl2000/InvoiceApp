<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F4FA">

        <androidx.cardview.widget.CardView
            android:id="@+id/bgCardView"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="#F9D458"
            android:layout_alignParentTop="true">
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/myCardView"
                android:layout_gravity="center"
                android:text="發票口袋"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="60sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/myCardView"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:padding="20dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/register_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:text="建立會員"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/email_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="帳號"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:gravity="center"
                    app:layout_constraintLeft_toLeftOf="@id/register_title"
                    app:layout_constraintRight_toLeftOf="@id/email_edittext"
                    app:layout_constraintTop_toTopOf="@id/email_edittext"
                    app:layout_constraintBottom_toBottomOf="@id/email_edittext"/>
                <EditText
                    android:id="@+id/email_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:hint="Email"
                    android:textColorHint="#CECCCE"
                    android:inputType="textEmailAddress"
                    app:layout_constraintRight_toRightOf="@id/register_title"
                    app:layout_constraintTop_toBottomOf="@id/register_title"
                    app:layout_constraintLeft_toRightOf="@id/email_title" />
                <TextView
                    android:id="@+id/name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="暱稱"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:gravity="center"
                    app:layout_constraintLeft_toLeftOf="@id/register_title"
                    app:layout_constraintRight_toLeftOf="@id/name_edittext"
                    app:layout_constraintTop_toTopOf="@id/name_edittext"
                    app:layout_constraintBottom_toBottomOf="@id/name_edittext"/>
                <EditText
                    android:id="@+id/name_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:hint="Ex: Adam"
                    android:textColorHint="#CECCCE"
                    android:inputType="text"
                    app:layout_constraintRight_toRightOf="@id/register_title"
                    app:layout_constraintTop_toBottomOf="@id/email_edittext"
                    app:layout_constraintLeft_toRightOf="@id/name_title" />
                <TextView
                    android:id="@+id/password_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="密碼"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:gravity="center"
                    app:layout_constraintLeft_toLeftOf="@id/register_title"
                    app:layout_constraintRight_toLeftOf="@id/password_edittext"
                    app:layout_constraintTop_toTopOf="@+id/password_edittext"
                    app:layout_constraintBottom_toBottomOf="@id/password_edittext"/>
                <EditText
                    android:id="@+id/password_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:hint="password"
                    android:textColorHint="#CECCCE"
                    android:inputType="textPassword"
                    app:layout_constraintRight_toRightOf="@id/register_title"
                    app:layout_constraintTop_toBottomOf="@id/name_edittext"
                    app:layout_constraintLeft_toRightOf="@id/password_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>



    </RelativeLayout>
</layout>